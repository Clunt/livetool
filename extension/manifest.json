{
  "manifest_version": 2,

  "name": "LiveTool",
  "description": "Live Tools",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "app.js",
        "platform/music.163.com.js",
        "platform/douyu.com.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}